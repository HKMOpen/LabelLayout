<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LabelLayout">
        <attr name="labelHeight" format="dimension" />
        <attr name="labelDistance" format="dimension" />
        <attr name="labelBackground" format="color" />
        <attr name="labelGravity" format="enum">
            <enum name="top_left" value="0" />
            <enum name="top_right" value="1" />
            <enum name="bottom_right" value="2" />
            <enum name="bottom_left" value="3" />
        </attr>

        <attr name="labelText" format="reference|string" />
        <attr name="labelTextSize" format="reference|dimension" />
        <attr name="labelTextColor" format="reference|color" />
    </declare-styleable>

</resources>